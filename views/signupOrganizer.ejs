                                <input type="text" name="CoRole" id="CoRole" required/>
                            </div>
                            <br />
                            <div class="field">
                                <label for="company">VAT NUMBER </label>
                                <input type="number" name="VatNumber" id="VatNumber"/>
                            </div>
                            <br />
